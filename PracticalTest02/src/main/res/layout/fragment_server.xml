<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/frame_border">

    <Space
        android:layout_width="match_parent"
        android:layout_height="64dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/server"
        android:gravity="center"/>

    <EditText
        android:id="@+id/server_text_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/message_from_server"
        android:inputType="text" />

    <EditText
        android:id="@+id/port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PORT"
        android:inputType="text" />

    <Button
        android:id="@+id/display_message_button_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/server_on"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"/>

    <Button
        android:id="@+id/display_message_button_server_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/server_off"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"/>

</LinearLayout>